---
import { focus } from '../../content/siteContent';
---

<section id="focus" class="section bg-light-surface dark:bg-dark-surface">
  <div class="container-prose">
    <h2 class="mb-12">{focus.title}</h2>

    <div class="grid gap-8 md:gap-10">
      {focus.areas.map((area) => (
        <article class="group">
          <h3 class="text-lg md:text-xl mb-3 text-light-text dark:text-dark-text">
            {area.title}
          </h3>
          <p class="text-light-muted dark:text-dark-muted">
            {area.description}
          </p>
        </article>
      ))}
    </div>

    <p class="mt-12 text-light-text/90 dark:text-dark-text/90 font-medium">
      {focus.closing}
    </p>
  </div>
</section>
